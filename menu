#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

// Declaration des fonctions
void afficherRegles();
void choisirNiveau();
void lancerJeu();
void afficherScore();
void menu();
void Color(int couleurTexte, int couleurFond);

int main()
{
    Color(14,5); // texte jaune, fond violet
    menu(); 
    return 0;
}

//Fonction pour changer la couleur
void Color(int couleurTexte, int couleurFond){
    HANDLE H= GetStdHandle(STD_OUTPUT_HANDLE);
    SetConsoleTextAttribute(H,couleurFond*16+couleurTexte);
}
 
void menu() {
    int choix, niveau = 0, score = 0;
    
    do
    {
        system("cls");
        
        // Affichage du menu
        int tailleTexte = 60;
        char texte[] = "SNOOPY";
        printf("%*s\n", tailleTexte, texte);

        printf("\nMenu de jeu :\n");
        printf("1. Afficher les regles\n");
        printf("2. Choisir le niveau\n", niveau);
        printf("3. Afficher le score\n", score);
        printf("4. Quitter\n");

        printf("\nQue voulez-vous faire :");
        scanf("%d", &choix);

        // Affichage suivant l'option choisie
        switch (choix)
        {
            case 1:
                afficherRegles();
                break;
            case 2:
                choisirNiveau();
                break;
            case 3:
                afficherScore();
                break;
            default:
                printf("Choix invalide. Veuillez reessayer.\n");
        }

    } while (choix < 1 || choix > 4);
}

void afficherRegles()
{
    system("cls");
    int choix;
    int rep;

    // Affichage des regles du jeu
    printf("Regles du jeu :\n");
    printf("Le but de Snoopy est de recuperer 4 oiseaux aux 4 coins du niveau en un temps imparti.\n Le probleme est que ces 4 oiseaux ne sont pas si faciles a recuperer.\n Une balle rebondit constamment dans le niveau afin de freiner Snoopy dans sa quete.\n Mais ce n'est pas tout, d'autres pieges sont presentsâ€¦\n A vous de jouer !");
    printf("\n\nVoulez vous retourner au menu ? ( 1 = oui, 0 = non)\n");
    scanf("%d", &rep);

    if ( rep == 1 ) {
        menu();
    }
}

