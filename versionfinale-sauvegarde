#include <stdio.h>
#include <conio.h>
#include <unistd.h>
#include "biblio_fonction.h"

extern int NIV;

extern char Tableau[LIGNE][COLONNE];

struct Balle {
    int X,Y,vecX,vecY;
};

void save_supp(int choix,int compteur_vie,int compteur_oiseau,int temps_restant,int Xi,int Yi)
{
    struct Balle B;
    switch(choix)
    {
        case 1 :
        {
            FILE *fichier_balle=NULL;
            fichier_balle = fopen("../save_supp.txt", "w");

            if(fichier_balle==NULL){
                printf("Echec lors de l'ouverture.\n");
            }
            fprintf(fichier_balle, "%d %d %d %d %d %d %d %d",B.X,B.Y,B.vecX,B.vecY,compteur_vie,compteur_oiseau,temps_restant,Xi,Yi);
            fclose(fichier_balle);
            break;
        }
        case 2 :
        {
            FILE *fichier=NULL;
            fichier = fopen("../save_supp.txt", "r");
            fscanf(fichier, "%d %d %d %d %d %d %d %d",&B.X,&B.Y,&B.vecX,&B.vecY,&compteur_vie,&compteur_oiseau,&temps_restant,&Xi,&Yi);
            fclose(fichier);
            break;
        }
    }
}

void rAm(int choix)
{
    switch(choix)
    {
        case 1 :
        {
            FILE* ram = fopen("../ram.txt", "w");
            for(int l = 0 ; l <= LIGNE-1 ;l++) {
                for( int c = 0 ; c <= COLONNE-1 ; c++) {
                    fprintf(ram," %c", Tableau[l][c]) ;
                }
                fprintf(ram,"\n");
            }
            fclose(ram);
            ram = NULL;
            break;
        }
        case 2 :
        {
            FILE* ram = fopen("../ram.txt", "r");
            for(int l = 0 ; l <= LIGNE-1 ;l++) {
                for( int c = 0 ; c <= COLONNE-1 ; c++) {
                    fscanf(ram," %c", &Tableau[l][c]) ;
                }
            }
            fclose(ram);
            ram = NULL;
            break;
        }
        case 3 :
        {
            FILE *fc;
            fc=fopen("../ram.txt","w");
            fclose(fc);
            break;
        }
    }
}
void menu_save()
{
    char choix;
    system("cls");
    printf("Ou voulez vous save ? \n"
           "1 : \n"
           "2 : \n"
           "3 : \n"
           "Attention vous risquez de détruire votre sauvegarde précedente si vous enregistrer dans un fichier deja plein !!\n"
           "tapez 4 pour retourner au menu\n");
    do
    {
        choix = _getch();
    }while(!(choix == '1'|| choix == '2'||choix == '3'||choix == '4'));
    switch(choix)
    {
        case '1' :
        {
            FILE* save1 = fopen("../save1.txt", "w");
            for(int l = 0 ; l <= LIGNE-1 ;l++) {
                for( int c = 0 ; c <= COLONNE-1 ; c++) {
                    fprintf(save1," %c", Tableau[l][c]) ;
                }
                fprintf(save1,"\n");
            }
            fclose(save1);
            save1 = NULL;
            break;
        }
        case '2' :
        {
            FILE* save2 = fopen("../save2.txt", "w");
            for(int l = 0 ; l <= LIGNE-1 ;l++) {
                for( int c = 0 ; c <= COLONNE-1 ; c++) {
                    fprintf(save2," %c", Tableau[l][c]) ;
                }
                fprintf(save2,"\n");
            }
            fclose(save2);
            save2 = NULL;
            break;
        }
        case '3' :
        {
            FILE* save3 = fopen("../save3.txt", "w");
            for(int l = 0 ; l <= LIGNE-1 ;l++) {
                for( int c = 0 ; c <= COLONNE-1 ; c++) {
                    fprintf(save3," %c", Tableau[l][c]) ;
                }
                fprintf(save3,"\n");
            }
            fclose(save3);
            save3 = NULL;
            break;
        }
        case '4':
        {
            rAm(3);
            menu();
            break;
        }
    }
    menu_save();
}

void menu_charge()
{
    char choix;
    system("cls");
    printf("Quel sauvegard voulez vous charger ? \n"
           "1 : \n"
           "2 : \n"
           "3 : \n");
    do
    {
        choix = _getch();
    }while(!(choix == '1'|| choix == '2'||choix == '3'));
    switch(choix)
    {
        case '1' :
        {
            FILE* pf = fopen("../save1.txt", "r");
            if (pf == NULL) {
                printf("cette sauvegarde est vide\n");
            }
            for(int l = 0 ; l <= LIGNE-1 ;l++) {
                for( int c = 0 ; c <= COLONNE-1 ; c++) {
                    fscanf(pf," %c", &Tableau[l][c]) ;
                }
            }
            fclose(pf);
            pf = NULL;
            break;
        }
        case '2' :
        {
            FILE* pf = fopen("../save2.txt", "r");
            if (pf == NULL) {
                printf("cette sauvegarde est vide\n");
            }
            for(int l = 0 ; l <= LIGNE-1 ;l++) {
                for( int c = 0 ; c <= COLONNE-1 ; c++) {
                    fscanf(pf," %c", &Tableau[l][c]) ;
                }
            }
            fclose(pf);
            pf = NULL;
            break;
        }
        case '3' :
        {
            FILE* pf = fopen("../save3.txt", "r");
            if (pf == NULL) {
                printf("cette sauvegarde est vide\n");
            }
            for(int l = 0 ; l <= LIGNE-1 ;l++) {
                for( int c = 0 ; c <= COLONNE-1 ; c++) {
                    fscanf(pf," %c", &Tableau[l][c]) ;
                }
            }
            fclose(pf);
            pf = NULL;
            break;
        }
    }
    affichage_tableau();
}

void save_touche(int choix,int jeu,int niv, char monter,char gauche, char descendre, char droite, char casser, char sauvegarder)
{
    switch(choix)
    {
        case 1 :
        {
            FILE *fichier=NULL;
            fichier = fopen("../touche.txt", "w");

            if(fichier==NULL){
                printf("Echec lors de l'ouverture.\n");
            }
            fprintf(fichier, "%c %c %c %c %c %c",monter,gauche,descendre,droite,casser,sauvegarder);
            fclose(fichier);
            break;
        }
        case 2 :
        {
            FILE *fichier=NULL;
            fichier = fopen("../touche.txt", "r");
            fscanf(fichier, "%c %c %c %c %c %c",&monter,&gauche,&descendre,&droite,&casser,&sauvegarder);
            fclose(fichier);
            switch ( jeu )
            {
                case 0 :
                    menu_touche(jeu,monter,gauche,descendre,droite,casser,sauvegarder);
                    break;
                case 1 :
                    acquisition_touche(niv,monter,gauche,descendre,droite,casser,sauvegarder);
                    break;
            }
        }
    }
}



