#include <stdio.h>
#include <unistd.h>
int tempsrestant,Cvictoire=0,Oramasse=0;
int horloge(){
    tempsrestant = 120;
    while (tempsrestant != 0 || Cvictoire == 1){
        printf("Temps : %d",tempsrestant);
        tempsrestant-=1;
        sleep(1);
        system("cls");
    }
}
void vies(){
    int viesrestantes = 3;
    if(tempsrestant == 0)
        viesrestantes-=1;
}

void score(){
    int Sniveau = 0, Stotal;
    Sniveau = 100* tempsrestant;
    Stotal+=Sniveau;
    //printf("Le score de ce niveau est %d",Sniveau);
}

void victoire(){
    if(Oramasse == 4)
        Cvictoire += 1;
}

int main() {
    horloge();
    score();
    vies();
    //après dowhile remettre Cvictoire à 0
    return 0;
}
